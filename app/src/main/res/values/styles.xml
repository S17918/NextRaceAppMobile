<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorSecondary">@color/colorText</item>
        <item name="android:subtitleTextColor">@color/colorText</item>
    </style>
    <style name="TabsView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:textColorSecondary">@color/colorText</item>
        <item name="android:textColorHint">@color/colorText</item>
        <item name="android:colorControlActivated">@color/colorRed</item>
        <item name="android:colorForeground">@color/colorSecondary</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorText</item>
        <item name="colorAccent">@color/colorRed</item>
    </style>
    <style name="NavigationView">
        <item name="android:listDivider">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorSecondary</item>
    </style>
</resources>
