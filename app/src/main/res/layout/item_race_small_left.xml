<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_race_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="5px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorBackground"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="5px">

                    <ImageView
                        android:id="@+id/race_category_logo"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/race_country_flag"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:background="@color/colorBackground"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/track_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:layout_marginRight="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorText"
                    android:layout_weight="2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    android:background="@color/colorBackground"
                    android:gravity="center"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:textColor="@color/colorText"
                                android:textSize="12sp"
                                android:text="@string/item_label_date"
                                android:paddingTop="5dp"
                                android:paddingBottom="2dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/race_date"
                                android:textColor="@color/colorText"
                                android:textSize="12sp"
                                android:paddingTop="2dp"
                                android:paddingBottom="5dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorText"
                                android:paddingTop="5dp"
                                android:paddingBottom="2dp"/>
                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorText"
                                android:paddingTop="2dp"
                                android:paddingBottom="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:textColor="@color/colorText"
                                android:textSize="12sp"
                                android:text="@string/item_label_laps"
                                android:paddingTop="5dp"
                                android:paddingBottom="2dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/race_laps"
                                android:textColor="@color/colorText"
                                android:textSize="12sp"
                                android:paddingTop="2dp"
                                android:paddingBottom="5dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/color_1"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:layout_gravity="bottom"/>

        <FrameLayout
            android:id="@+id/color_2"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"/>
</androidx.cardview.widget.CardView>





